<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="MyToggle">
        <item name="android:background">@drawable/selector_toggle</item>
        <item name="android:padding">0.0dip</item>
        <item name="android:onClick">toggleStopSound</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item> 
        <!--  <item name="android:textSize">13sp</item>
        <item name="android:textColor">@drawable/text_color</item> -->
    </style>
    
    <style name="MyToggleMode">
        <item name="android:background">@drawable/selector_toggle_mode</item>
        <item name="android:padding">0.0dip</item>
        <item name="android:onClick">toggleStopSound</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item> 
        <!--  <item name="android:textSize">13sp</item>
        <item name="android:textColor">@drawable/text_color</item> -->
    </style>
    
    <style name="MyImageButtonNotes">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2.0dp</item>
        <item name="android:onClick">clickWhatKeyNote</item>
        <item name="android:foreground">#C5CAE9</item>
    </style>
    
    <style name="img_button_style_hard_mode">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">@dimen/button_keynote</item>
        <item name="android:layout_height">@dimen/button_keynote</item>
        <item name="android:layout_margin">@dimen/button_keynote_margin</item>
        <item name="android:onClick">clickWhatKeyNote</item>
        <item name="android:foreground">#C5CAE9</item>
    </style>
    
    <style name="img_button_style_hard_mode_s">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_margin">2.0dp</item>
        <item name="android:onClick">clickWhatKeyNote</item>
        <item name="android:foreground">#C5CAE9</item>
    </style>
    
    <style name="MyImageButtonChoseInstrument">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2.0dp</item>
        <item name="android:onClick">choseInstrument</item>
    </style>
    
    <style name="editPlayerStyle">
        <item name="android:digits">abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789_</item>
        <item name="android:inputType">textCapCharacters</item>
        <item name="android:ems">15</item>
        <item name="android:maxLength">15</item>
    </style>
    
    <style name="AppFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#C5CAE9</item>
<!--         <item name="android:typeface">monospace</item> -->
    </style>	
</resources>
